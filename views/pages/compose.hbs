{{> sidetab}}

<div class="relative w-full flex flex-col h-screen overflow-y-hidden">

    <div class="w-full h-screen overflow-x-hidden border-t flex flex-col">
        <main class="w-full flex-grow p-6">
            <h1 class="w-full text-3xl text-black pb-6">Compose</h1>

            <div class="flex flex-wrap">
                <div class="w-full lg:w-1/1 my-6 pr-0 lg:pr-2">
                    <p class="text-xl pb-6 flex items-center">
                        <i class="fas fa-list mr-3"></i> Send New Mail
                    </p>
                    <div class="leading-loose">
                        <form class="p-10 bg-white rounded shadow-xl" id="composeForm">
                            <div class="mt-2">
                                <label class="block text-sm text-gray-600" for="email">Receiver Email</label>
                                <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="email"
                                    name="email" type="text" required="" placeholder="Your Email" aria-label="Email">
                            </div>
                            <div class="mt-2">
                                <label class=" block text-sm text-gray-600" for="message">Template</label>
                                <select
                                    class="block w-full mt-1 bg-gray-200 border border-gray-300 text-gray-700 py-2 px-3 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="template_category" name="template_category">
                                    {{#each templateList as |template|}}
                                    <option value="{{template.template_id}}">{{template.template_name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="mt-2">
                                <label class=" block text-sm text-gray-600" for="server">Server</label>
                                <select
                                    class="block w-full mt-1 bg-gray-200 border border-gray-300 text-gray-700 py-2 px-3 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="server_category" name="server_category">
                                    {{#each serverList as |server|}}
                                    <option value="{{server.server_id}}">{{server.server_name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="mt-6">
                                <button class="px-4 py-1 text-white font-light tracking-wider bg-green-900 rounded"
                                    type="submit">Send Email</button>
                            </div>
                        </form>
                    </div>
                </div>


            </div>
        </main>

        <footer class="w-full bg-white text-right p-4">
            Built by <a target="_blank" href="https://davidgrzyb.com" class="underline">David Grzyb</a>.
        </footer>
    </div>

</div>
{{> scripts/swal}}
